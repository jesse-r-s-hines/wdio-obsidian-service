{
    "name": "wdio-obsidian-service-workspace",
    "version": "1.3.2",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "bin": {},
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jesse-r-s-hines/wdio-obsidian-service.git"
    },
    "scripts": {
        "build": "npm run --workspaces build",
        "version": "node scripts/bumpVersions.mjs",
        "postversion": "git add package*.json **/package*.json && git commit -m \"Bump $npm_package_version\"",
        "lint": "eslint packages/*/src packages/*/test/e2e packages/*/test/unit packages/*/test/standalone",
        "test": "run-s test:*",
        "test:unit": "npm run --workspaces --if-present test:unit",
        "test:e2e": "npm run --workspaces --if-present test:e2e",
        "test:android": "npm run --workspaces --if-present test:android",
        "doc": "typedoc",
        "preview-doc": "typedoc && cd generated-docs && serve"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "appium": "^2.19.0",
        "appium-uiautomator2-driver": "^4.2.5",
        "eslint": "^9.31.0",
        "npm-run-all": "^4.1.5",
        "serve": "^14.2.4",
        "typedoc": "^0.28.7",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.37.0"
    },
    "engines": {
        "node": ">=18"
    }
}
